{
  "name": "RateMyMovie",
  "version": "1.0.0",
  "description": "Simple Desktop Application providing rating of Movies and Tv Series",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "",
  "keywords": [
    "Electron",
    "RateMyMovie",
    "Movies/Tv-Series",
    "Search",
    "demo"
  ],
  "author": "Mohit Khare",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.48.3",
    "electron-packager": "^10.1.0"
  },
  "build": {
    "appId": "com.mohit.RateMyMovie",
    "copyright": "Copyright Â© 2018 ${Mohit Khare}",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "title": "RateMyMovie",
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "imdb-api": "^3.1.2"
  }
}
